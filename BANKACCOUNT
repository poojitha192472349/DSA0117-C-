#include <iostream>
using namespace std;

class BankAccount {
private:
    int accountNumber;
    double balance;

public:
    
    BankAccount(int accNum = 0, double bal = 0.0) {
        accountNumber = accNum;
        balance = bal;
    }

  
    void display() {
        cout << "Account Number: " << accountNumber << endl;
        cout << "Balance: $" << balance << endl;
    }
};

int main() {
    
    BankAccount acc1(12345, 1000.50);

  
    BankAccount acc2;

    
    cout << "Account 1 details:" << endl;
    acc1.display();

    cout << "\nAccount 2 details (default values):" << endl;
    acc2.display();

    return 0;
}
